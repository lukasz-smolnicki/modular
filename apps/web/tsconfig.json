{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "jsx": "react-jsx",
        "moduleResolution": "bundler",
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "types": ["vite/client"],
        "baseUrl": ".",
        "paths": { "@/*": ["src/*"] },
        "ignoreDeprecations": "6.0"
    },
    "include": ["src", "vite.config.ts", "src/vite-env.d.ts"]
}
