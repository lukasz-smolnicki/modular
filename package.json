{
    "name": "modular",
    "private": true,
    "workspaces": [
        "apps/*"
    ],
    "scripts": {
        "dev": "npm-run-all --parallel dev:api dev:web dev:mobile",
        "dev:api": "npm run --workspace=apps/api dev",
        "dev:web": "npm run --workspace=apps/web dev",
        "dev:mobile": "npm run --workspace=apps/mobile dev",
        "lint": "eslint apps --fix --max-warnings=0"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^8.45.0",
        "@typescript-eslint/parser": "^8.45.0",
        "eslint": "^9.36.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-native": "^5.0.0",
        "firebase-tools": "^14.17.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.6.2",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.45.0"
    }
}
